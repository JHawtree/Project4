<h2> Sign Up</h2>

<form id="form" method="post" action="/signup" novalidate>

  <fieldset>
    <label for="firstname">First Name*</label>
    <input class="form-field" input type="text" id="firstname" name="firstname">
    <span class="tooltip-form-alert" id="firstname-empty-alert">Please enter your first name</span>
  </fieldset>
    
  <fieldset>
    <label for="lastname">Last Name*</label>
    <input class="form-field" input type="text" id="lastname" name="lastname">
    <span class="tooltip-form-alert" id="lastname-empty-alert">Please enter your last name</span>
  </fieldset>

  <fieldset>
    <label for="email">Email*</label>
    <input class="form-field" input type="email" id="email" name="email">
    <span class="tooltip-form-alert" id="email-empty-alert">Please enter your email address</span>
  </fieldset>

  <fieldset>
    <label for="password">Password*</label>
    <input class="form-field" input type="password" id="password" name="password">
    <span class="tooltip-form-alert" id="password-empty-alert">Please enter your password</span>
  </fieldset>

  <fieldset>
    <label for="password">Confirm Password*</label>
    <input class="form-field" input type="password" id="confirm-password" name="confirm-password">
    <span class="tooltip-form-alert" id="password-match-alert">Please enter your password</span>
    <span class="tooltip-form-alert" id="password-match-alert">Passwords do not match</span>
  </fieldset>

  <button type="submit" id="submit-button">Sign Up</button>
</form>